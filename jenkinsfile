pipeline {
    agent any
    
    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/anjurusatheesh/sample.git'
                withCredentials([usernamePassword(credentialsId: 'anjuru', passwordVariable: '7702826188satheesh', usernameVariable: 'github')]) {
            }
        }
        
        stage('Image Build') {
            steps {
                sh 'docker build -t node .'
            }
        }
        
        stage('Image Run') {
            steps {
                sh 'docker run -d -p 3001:3000 node'
            }
        }
    }
}


