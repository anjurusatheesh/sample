pipeline {
    agent any
    
    stages {
        stage('Git Clone') {
            steps {
                // Using withCredentials to securely pass the GitHub credentials
                withCredentials([usernamePassword(credentialsId: 'anjuru', passwordVariable: 'pass', usernameVariable: 'user')]) {
                    // Pass credentials to the git command
                    sh 'git clone https://$user:$pass@github.com/anjurusatheesh/sample.git'
                }
            }
        }
        
        stage('Image Build') {
            steps {
                sh 'docker build -t node .'
            }
        }
    }
}


